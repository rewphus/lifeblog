<div class="col s12 m4 fadeIn">
    <div class="card small">
        <div class="card-image blue-grey darken-1">
            {{#if image}}
                <img src="{{image absolute="true"}}" alt="post cover">
            {{/if}}
        </div>
        <div class="card-content index-card row">
            <div class="col s12 center-align">
                <span class="loop-link">{{tags}}</span>
                <span>|</span>
                <span>{{date published_at format="MMMM DD"}}</span>
            </div>
            <div class="col s12 center-align">
                <a href="{{url}}">
                    <span class="card-title grey-text text-darken-4">{{ title }}</span>
                </a>
            </div>
        </div>
    </div>
</div>